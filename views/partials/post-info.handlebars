<article class="post">
    <div class="title">
        <h1>{{title}}</h1>
        <a href="/post/{{ id }}"><img src='images/{{image}}.jpg'/></a>
    </div>
    <div class='description'>
        <p>{{comments_text}}</p>
    </div>
    <div class="meta">
        <a href="/post/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a>
    </div>
</article>